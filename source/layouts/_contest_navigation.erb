<% years = [] %>
<% Dir.chdir('source') do %>
  <% Dir.glob('*').select { |f| File.directory? f }.sort_by { |f| f }.reverse.each do |folder| %>
    <% years << folder.to_i %>
  <% end %>
<% end %>
<% previous_year = year - 1 %>
<% next_year = year + 1 %>

<div class="contest-navigation">
<% if years.include? previous_year %>
  <a href="/winners/<%= previous_year %>/">&laquo; Previous Year</a>
  &nbsp;&nbsp;|&nbsp;&nbsp;
<% end %>

<a href="/winners">All Years</a>

<% if years.include? next_year %>
  &nbsp;&nbsp;|&nbsp;&nbsp; <a href="/winners/<%= next_year %>/">Next Year &raquo;</a>
<% end %>
</div>